<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/rl_newsItem"
              android:layout_width="match_parent"
              android:layout_height="100dp">
    
  <ImageView
      android:id="@+id/iv_newsPic"
      android:layout_width="80dp"
      android:layout_height="80dp"
      android:layout_marginTop="10dp"
      android:layout_marginLeft="10dp"
      android:scaleType="centerCrop"
      android:src="@mipmap/ic_launcher"
      />
    <TextView
        android:id="@+id/tv_newsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:text="指定发送的发生大傻傻的噶啥的是打发斯蒂芬asdfasdasdfasdfasdfasdfasdfasdfasdfasdf"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/iv_newsPic"/>

    <TextView
        android:id="@+id/tv_newsChannel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#999999"
        android:text="共产主义"
        android:textSize="14sp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/iv_newsPic"
        />

    <TextView
        android:id="@+id/tv_newsDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#999999"
        android:textSize="14sp"
        android:text="2016-12-16"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"/>

</RelativeLayout>